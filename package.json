{
  "name": "eduteams-open",
  "version": "1.0.0",
  "description": "Open-source team formation tool for educators",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "education",
    "teams",
    "classroom",
    "cooperative learning"
  ],
  "author": "EduTeams Contributors",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.eduteams.app",
    "productName": "EduTeams",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ]
  }
}
